<%= form_for :book, url: books_path do |f| %>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>
 
  <p>
    <%= f.label :isbn %><br>
    <%= f.text_field :isbn %>
  </p>
 
 <p>
    <%= f.label :author %><br>
    <%= f.text_field :author %>
  </p>
 
 <p>
    <%= f.label :description %><br>
    <%= f.text_field :description %>
  </p>
  
  <p>
    <%= f.submit %>
  </p>
<% end %>