<h2>Listing All Books</h2>
<table>
    <% b = Book.all %>
	<% if b.length == 0 %>
	    <em>No books found!</em>
	<% else %>
	<tr>
		<th>Title</th>
		<th>ISBN</th>
		<th>Author</th>
		<th>Description</th>
	</tr>
    	<% @books.each do |book| %>
    		<tr>
    			<td><%=book.title %></td>
    			<td><%=book.isbn %></td>
    			<td><%=book.author %></td>
    			<td><%=book.description %></td>
    			<td><%= link_to 'Show', book_path(book) %></td>
    			<td><%= link_to 'Edit', edit_book_path(book) %></td>
    			<td><%= link_to 'Delete', book_path(book), method: :delete, data: { confirm: "Are You Sure?" } %></td>
    		</tr>
    	<% end %>
    <% end %>
</table>
